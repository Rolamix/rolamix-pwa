{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": false,
    "preserveConstEnums": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "plugins": [
      { "name": "tslint-language-service" }
    ],
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~decorators/*": [
        "src/decorators/*"
      ],
      "~helpers/*": [
        "src/helpers/*"
      ],
      "~locales/*": [
        "src/locales/*"
      ],
      "~services/*": [
        "src/services/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
